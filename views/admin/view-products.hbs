<section>
  <div class="container">
    <div class="row mt-4  ">

      <a href="/admin/add-product" class="btn btn-dark ml-auto">Add Product</a>
    </div>

    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-image/{{this._id}}.jpeg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>