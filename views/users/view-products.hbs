<section>
    <div class="container mt-5">
        <div class="row">
            {{#each product}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 24rem;">
                    <img class="card-img-top" src="/product-image/{{this._id}}.jpeg" alt="Card image cap"
                        style="height: 12rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="cart-text">Rs.{{this.price}}</p>
                        <p class="card-text" style="color: rgb(92, 134, 50);">RATING:  {{this.description}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>

            </div>
            {{/each}}


        </div>
    </div>
</section>
